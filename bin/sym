#!/usr/bin/env bash

if [ "$1" = "-c" ]; then
	clipboard=true
	shift
fi
symbol=${1:?}

function emit {
	symbol=${1:?}

	if [ -z "$clipboard" ]; then
		echo -n "$symbol"
	else
		echo -n "$symbol" | pbcopy
	fi
}

case $symbol in
	tick)
		emit "✓"
		;;
	check)
		emit "✗"
		;;
	hellip)
		emit "…"
		;;
	mdash)
		emit "—"
		;;
	ndash)
		emit "–"
		;;
	deg)
		emit "°"
		;;
	warn)
		emit "⚠"
		;;
	larr)
		emit "←"
		;;
	rarr)
		emit "→"
		;;
	rArr)
		emit "⇒"
		;;
	harr)
		emit "↔"
		;;
	tm)
		emit "™"
		;;
	c)
		emit "©"
		;;
	approx)
		emit "≈"
		;;
	correspond)
		emit "≙"
		;;
	mequal)
		emit "≟"
		;;
	multi)
		emit "×"
		;;
	fract)
		emit "¼ ½ ¾"
		;;
	sup)
		emit "¹ ² ³ ⁴ ⁵ ⁶ ⁷ ⁸ ⁹"
		;;
	sub)
		emit "₀ ₁ ₂ ₃ ₄ ₅ ₆ ₇ ₈ ₉"
		;;
	quot)
		emit "“”‘’"
		;;
	shrug)
		emit "¯\_(ツ)_/¯"
		;;
	flip)
		emit "(╯°□°）╯︵ ┻━┻"
		;;
	*)
		if [ -z "$clipboard" ]; then
			emit ":$symbol:" | fmj
		else
			unset clipboard # XXX: hacky, breaks encapsulation
			emit ":$symbol:" | fmj | pbcopy
		fi
		;;
esac

exit 0
