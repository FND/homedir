#!/usr/bin/env sh

err=`node $HOME/Dev/jslint-reporter/wrapper.js \
	--goodparts --onevar=false --maxerr=999 $@ | \
	grep -v "Expected exactly one space between '\(function\|if\|while\|switch\|catch\)' and '('." | \
	grep -v "Missing space between 'for' and '('."`

if [ -z "$err" ]; then
	exit 0
else
	echo "$err"
	exit 1
fi
