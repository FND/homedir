alias ll="ls -alhG"
alias cp="cp -i"
alias mv="mv -i"
alias less="less -R"
alias grep="grep --color=auto"
alias cgrep="grep --color=always"
alias clip="vipe | pbcopy"
alias wdclip="pwd | pbcopy"

alias dist_upgrade="brew update && brew upgrade --cleanup"
alias away="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

alias trash="mv -t /tmp/trash"
alias dirf="find . | sed -e 's/[^-][^\/]*\//  |/g' -e 's/|\([^ ]\)/|-\1/'"

alias vi="vim -p"
alias t="todo.sh"
alias tt="clear; todo.sh listpri"
alias vocab="r -f vocab -n"
alias word="~/Scripts/randict.sh"
alias trans="~/Scripts/translation.sh"
alias vwiki="vim ~/Documents/vwiki/index.*"
